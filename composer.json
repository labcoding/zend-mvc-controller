{
  "name": "sebaks/zend-mvc-controller",
  "type": "library",
  "authors": [
    {
      "name": "sebaks",
      "email": "d.kirillof@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5",
    "zendframework/zend-view": "~2.5.0",
    "zendframework/zend-http": "~2.5.0",
    "zendframework/zend-mvc": "~2.5.0",
    "zendframework/zend-modulemanager": "~2.5.0",
    "sebaks/controller": "~0.1.0"
  },
  "require-dev" : {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Sebaks\\ZendMvcController\\": "src/",
      "Sebaks\\ZendMvcControllerTest\\": "src/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "cs": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always"
  }
}
